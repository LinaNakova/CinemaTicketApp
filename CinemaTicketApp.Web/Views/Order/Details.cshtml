@{
}
@model OnlineCinemaApp.Domain.DomainModels.Order
<div class="container">
    <div class="m-3">
        <a class="btn btn-success">Order For : @Model.User</a>
    </div>

    @for (int i = 0; i < Model.ProductsInOrders.Count; i++)
    {
        var item = Model.ProductsInOrders.ElementAt(i).OrderedProduct;

        if (i % 3 == 0)
        {
            @:<div class="row">
            }


            <div class="col-md-3 m-4">
                <div class="card" style="width: 18rem; height: 30rem;">
                    <img class="card-img-top" src="@item.ProductImage" style="height: 50%" alt="Image for product!" />

                    <div class="card-body">
                        <h3 class="card-title">@item.ProductName</h3>
                        <p class="card-text">@item.ProductDescription</p>

                        <h6>Price: @item.ProductPrice MKD</h6>
                        <h7>Date: @item.Date.</h7>
                        <h8>Time: @item.Time </h8>
                    </div>

                   
                </div>
            </div>



            if (i % 3 == 2)
            {
            @:</div>
        }
    }

</div>
